<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/storyToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/internscope"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Story Details"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <!-- Scroll content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Name -->
            <TextView
                android:id="@+id/storyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story Name"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/yellow_shade"
                android:layout_marginBottom="6dp" />

            <!-- Position -->
            <TextView
                android:id="@+id/storyPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Desc1 -->
            <TextView
                android:id="@+id/storyDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short highlighted text"
                android:textSize="18sp"
                android:textColor="@color/internscope"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Full Description -->
            <TextView
                android:id="@+id/storyLongDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Share Button -->
            <Button
                android:id="@+id/btnShareStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Story"
                android:textSize="16sp"
                android:backgroundTint="@color/yellow_shade"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:drawableLeft="@android:drawable/ic_menu_share"
                android:drawablePadding="12dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

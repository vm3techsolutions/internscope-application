<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ==================== MAIN CONTENT ===================== -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/all_shadow"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/internscope"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Company Logo -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="65dp"
            app:cardElevation="10dp"
            android:layout_marginTop="32dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_94" />
        </androidx.cardview.widget.CardView>

        <!-- Company Name -->
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TechVision Pvt Ltd"
            android:textColor="@color/yellow_shade"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <!-- Type and Size -->
        <TextView
            android:id="@+id/tvCompanyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Limited | 51-200 Employees"
            android:textColor="#E0E0E0"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:gravity="center" />

        <!-- About Company -->
        <TextView
            android:id="@+id/tvAboutCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TechVision is an AI-driven SaaS company helping enterprises with digital transformation."
            android:textColor="#DADADA"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="24dp"
            android:lineSpacingExtra="4dp"
            android:maxLines="5" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Information"
                    android:textStyle="bold"
                    android:textColor="@color/yellow_shade"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Email -->
                <TextView
                    android:text="Email"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyEmail"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ“§ hr@techvision.com" />

                <!-- Phone -->
                <TextView
                    android:text="Phone"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyPhone"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ“ž 9876543210" />

                <!-- Website -->
                <TextView
                    android:text="Website"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvWebsite"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸŒ https://techvision.com" />

                <!-- Location -->
                <TextView
                    android:text="Location"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyAddress"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ“ Pune, Maharashtra" />

                <!-- Nation / State -->
                <TextView
                    android:text="Nation / State"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyState"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸŒ Maharashtra, India" />

                <!-- LinkedIn -->
                <TextView
                    android:text="LinkedIn"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyLinkedIn"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ”— linkedin.com/company/techvision" />

                <!-- Twitter -->
                <TextView
                    android:text="Twitter"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCompanyTwitter"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ¦ twitter.com/techvision" />

                <!-- KYC Method -->
                <TextView
                    android:text="KYC Method"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvKycMethod"
                    style="@style/ProfileValueStyle"
                    android:text="GST Certificate" />

                <!-- Certificate Number -->
                <TextView
                    android:text="Certificate Number"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCertificateNumber"
                    style="@style/ProfileValueStyle"
                    android:text="GSTIN27ABCDE1234F1Z5" />

                <!-- Certificate File -->
                <TextView
                    android:text="Certificate File"
                    style="@style/ProfileLabelStyle" />

                <TextView
                    android:id="@+id/tvCertificateFileUrl"
                    style="@style/ProfileValueStyle"
                    android:text="ðŸ“Ž https://example.com/uploads/gst_certificate.pdf" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnEditCompanyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Company Profile"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/yellow_shade"
            android:textColor="@color/black"
            android:paddingHorizontal="28dp"
            android:paddingVertical="12dp"
            android:elevation="6dp"
            android:letterSpacing="0.05" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</ScrollView>
    </LinearLayout>

    <!-- ==================== DRAWER MENU ===================== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_navigation"
        app:menu="@menu/activity_main_drawer"
        app:itemIconTint="@color/yellow_shade"
        app:itemTextColor="@color/internscope"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
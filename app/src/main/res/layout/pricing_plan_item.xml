<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- USER TYPE Badge -->
        <TextView
            android:id="@+id/tvPlanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="USER"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0.00"
            android:textColor="#FF6F00"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="12dp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ 0 Days"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Plan Name -->
        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#003366" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan Description"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Job Post Limit -->
        <TextView
            android:id="@+id/tvJobLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Post Limit: 0"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Combo -->
        <TextView
            android:id="@+id/tvCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combo Plan: No"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Buy Plan Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Plan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#FF6F00" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

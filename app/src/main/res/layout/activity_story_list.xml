<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- ================= MAIN CONTENT AREA ================ -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TOP TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/internscope"
            android:padding="20dp">

        <!-- MAIN TITLE -->
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behind Every Success, There’s a Story"
            android:textSize="24sp"
            android:textColor="@color/yellow_shade"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textAlignment="center"/>

        <!-- SUB TITLE -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover how Internscope helped students and professionals transform their careers."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingBottom="16dp"
            android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- MAIN TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vision To Create Impact"
                android:textSize="24sp"
                android:textColor="@color/yellow_shade"
                android:textStyle="bold"
                android:paddingBottom="4dp"
                android:textAlignment="center"/>

            <!-- SUB TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Through deep engagement with students, colleges, and industry partners, we recognized a critical gap between the growing issue of structural unemployment and the vast learning and work opportunities offered by MSMEs (Micro, Small, and Medium Enterprises). This realization fueled the vision behind Internscope.com — to create a smart, scalable platform."
                android:textSize="16sp"
                android:textColor="@color/internscope"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:lineHeight="20dp"/>
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_gravity="center">

            <!-- CARD 1 -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_card_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/counter1"
                    app:tint="#F47C20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#003366"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stories Created"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- CARD 2 -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_card_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/counter2"
                    app:tint="#F47C20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10K+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#003366"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students Guided"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>



        </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="12dp">


                <!-- CARD 3 -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stat_card_bg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/counter4"
                        app:tint="#F47C20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12K+"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#003366"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Institutions Network"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- CARD 4 -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stat_card_bg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/counter5"
                        app:tint="#F47C20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3L+"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#003366"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Network"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>


        <!-- HORIZONTAL LIST TITLE -->
        <TextView
            android:id="@+id/tvSliderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real Stories. Real Transformations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/yellow_shade"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:paddingTop="20dp"/>

        <View
            android:id="@+id/leftFade"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/fade_left"
            android:layout_marginLeft="0dp"/>

        <View
            android:id="@+id/rightFade"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/fade_right"
            android:layout_marginRight="0dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storyRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:id="@+id/dotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</ScrollView>
    </LinearLayout>


    <!-- =================== NAVIGATION DRAWER =================== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_navigation"
        app:menu="@menu/activity_main_drawer"
        app:itemIconTint="@color/yellow_shade"
        app:itemTextColor="@color/internscope"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
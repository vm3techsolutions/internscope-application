<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paymentStatusLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    tools:context="com.interns.internscopeapp.PaymentStatusActivity">

    <!-- Status Icon -->
    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/check" />

    <!-- Payment Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="12dp" />

    <!-- Amount Paid -->
    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 0.00"
        android:textColor="@color/yellow_shade"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <!-- Transaction ID -->
    <TextView
        android:id="@+id/transactionIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction ID: -"
        android:textColor="@color/internscope"
        android:textSize="16sp"
        android:layout_marginBottom="40dp" />

    <!-- Go to Dashboard Button -->
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Dashboard"
        android:textAllCaps="false"
        android:backgroundTint="@color/yellow_shade"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>

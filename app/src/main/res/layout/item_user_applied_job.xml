<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Profile Icon -->
<!--    <ImageView-->
<!--        android:id="@+id/imgJobIcon"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:src="@drawable/jobseeker"-->
<!--        android:layout_gravity="center_vertical"-->
<!--        app:tint="@color/yellow_shade" />-->

    <!-- Job Details -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales &amp; Marketing"
            android:textColor="@color/internscope"
            android:textStyle="bold"
            android:textSize="15sp" />

        <!-- Location & Salary -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvJobLocation"
                android:drawablePadding="4dp"
                android:text="Pune"
                android:textColor="#FF6F00"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tvJobSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="Salary: Not Disclosed"
                android:textColor="#FF6F00"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Apply Info Section -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp">

        <!-- Apply Date -->
        <TextView
            android:id="@+id/tvApplyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 May 2025"
            android:textColor="@color/internscope"
            android:textSize="13sp" />

        <!-- Company Name -->
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaishnavi Enterprises &amp; Services"
            android:textColor="#FF6F00"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:maxWidth="130dp"
            android:ellipsize="end"
            android:singleLine="true" />

        <!-- Status Button -->
        <TextView
            android:id="@+id/tvJobStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@android:color/white"
            android:background="@drawable/status_pending_bg"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ==================== MAIN CONTENT ===================== -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/all_shadow"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/internscope"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="65dp"
            app:cardElevation="10dp"
            android:layout_marginTop="32dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_94" />
        </androidx.cardview.widget.CardView>

        <!-- Name & Role -->
        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/yellow_shade"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/yellow_shade"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI/UX Designer"
            android:textColor="#E0E0E0"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passionate about design and technology. Looking for creative opportunities to grow."
            android:textColor="#DADADA"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="24dp"
            android:lineSpacingExtra="4dp"
            android:maxLines="3" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Contact Header -->
                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textStyle="bold"
                    android:textColor="@color/yellow_shade"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“§ Email: example@mail.com"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Phone: +91 9876543210"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvCurrentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Location: Pune, India"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvNationState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Nation/State: Maharashtra, India"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Job"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvCurrentJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¼ Current Job: Intern at TechCorp"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linkedin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— LinkedIn: linkedin.com/in/example"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualification"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvQualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ“ Qualification: B.Tech in Computer Science"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Languages"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—£ Languages: English, Hindi"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš§ Gender: Female"
                    android:textColor="#111827"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resume"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/internscope" />

                <TextView
                    android:id="@+id/tvResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Resume: Not Uploaded"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button -->
        <Button
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/yellow_shade"
            android:textColor="@color/black"
            android:paddingHorizontal="28dp"
            android:paddingVertical="12dp"
            android:elevation="6dp"
            android:letterSpacing="0.05" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</ScrollView>
    </LinearLayout>

    <!-- ==================== DRAWER MENU ===================== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_navigation"
        app:menu="@menu/activity_main_drawer"
        app:itemIconTint="@color/yellow_shade"
        app:itemTextColor="@color/internscope"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
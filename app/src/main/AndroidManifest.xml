<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.interns.internscopeapp">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InternscopeApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.interns.internscopeapp.CartActivity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.EditJobActivity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.UserDashboard"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.CompanyDashboard"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.CompanyEditProfile"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.CompanyProfile"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.CompanySignup"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Company_login"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.PaymentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="paymentcallback"
                    android:scheme="internscopeapp" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.interns.internscopeapp.EditProfiles"
            android:exported="false" />
        <!--
        <activity
            android:name=".Navigationmenus"
            android:exported="false"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.InternscopeApp.NoActionBar" />
        -->
        <activity
            android:name="com.interns.internscopeapp.PostJob"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Packages"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Subscription"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Profile"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Jobs"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.JobDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.ApplyJobActivity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Opportunity"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Courses"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Home"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Alert"
            android:exported="false" />

        <activity android:name="com.interns.internscopeapp.Verify"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="http://192.168.0.104:4000"
                    android:host="reset-password" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.interns.internscopeapp.SignUp"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.interns.internscopeapp.ForgotPass"
            android:exported="false" />
        <activity
            android:name="com.interns.internscopeapp.Login"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.interns.internscopeapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.auth.api.credentials.WorkerImpl.signin.api.key"
            android:value="default_web_client_id" />
    </application>

</manifest>